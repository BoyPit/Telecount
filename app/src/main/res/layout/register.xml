<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".com.vision.telecount.activity.RegisterActivity">

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:scrollbars="none"
        >




        <LinearLayout
            android:layout_width="match_parent"
            android:elevation="2dp"

            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:gravity="center"

            android:background="#10ffffff"
            tools:context=".MainActivity">

            <ImageView
                android:layout_width="186dp"
                android:layout_height="150dp"
                android:contentDescription="Logo Tse"

                android:src="@drawable/logotse" />

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/text_view_id"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:text="Inscription" />
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:startIconDrawable="@drawable/ic_perm_identity_white_24dp"

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="Username">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="20dp"
                app:startIconCheckable="true"
                app:startIconDrawable="@drawable/ic_lock_outline_white_24dp"

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="Password">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <GridLayout
                    android:id="@+id/grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="16dp"
                    android:clipToPadding="false"
                    android:columnCount="2">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/material_button"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:text="Connexion"/>

                    <Space/>
                </GridLayout>


            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>






    </ScrollView>
</RelativeLayout>